<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <constants>
        <name>PMID</name>
        <dataType>String</dataType>
        <value>
            <stringValue>0F9o00000000AM1</stringValue>
        </value>
    </constants>
    <label>Post Priority 1 Incidents to Service Desk Chatter Group</label>
    <processType>AutoLaunchedFlow</processType>
    <recordCreates>
        <name>Create_Chatter_Post</name>
        <label>Create Chatter Post</label>
        <locationX>204</locationX>
        <locationY>308</locationY>
        <assignRecordIdToReference>varChatterPostId</assignRecordIdToReference>
        <inputAssignments>
            <field>Body</field>
            <value>
                <elementReference>ChatterPost</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>LinkUrl</field>
            <value>
                <stringValue>https://bmcservicedesk.na17.visual.force.com/apex/BMCServiceDesk__RemedyforceConsole?record_id={!varIncidentId}&amp;objectName=Incident__c</stringValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>ParentId</field>
            <value>
                <elementReference>PMID</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Title</field>
            <value>
                <stringValue>Priority 1</stringValue>
            </value>
        </inputAssignments>
        <object>FeedItem</object>
    </recordCreates>
    <recordLookups>
        <name>Lookup_Incident_Number</name>
        <label>Lookup Incident Number</label>
        <locationX>206</locationX>
        <locationY>130</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Create_Chatter_Post</targetReference>
        </connector>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varIncidentId</elementReference>
            </value>
        </filters>
        <object>BMCServiceDesk__Incident__c</object>
        <outputAssignments>
            <assignToReference>varIncidentNumber</assignToReference>
            <field>Name</field>
        </outputAssignments>
    </recordLookups>
    <startElementReference>Lookup_Incident_Number</startElementReference>
    <textTemplates>
        <name>ChatterPost</name>
        <text>Incident #{!varIncidentNumber} has been submitted as a Priority 1.</text>
    </textTemplates>
    <variables>
        <name>varChatterPostId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>varIncidentId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
    <variables>
        <name>varIncidentNumber</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
</Flow>
