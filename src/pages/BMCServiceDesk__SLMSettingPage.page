               return false;
             
             }  
            else{ 
               milestoneday = milestonedayField.getValue();
             }
            if (MilestonehourField.getValue()== 0 && milestoneminuteField.getValue()== 0){
               window.parent.Ext.MessageBox.show({ msg:SLMSettingPage.Labels.EnterTime , buttons: Ext.MessageBox.OK});
               return false;
