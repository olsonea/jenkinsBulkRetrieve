    function SLMWarningSaveHandler(){ 
       	        
         var storeCSSData = '';
        var milestoneInetervalData = 0;
        var milestoneDeleteData = 0;
        var milestonehour ;
        var milestonemin ;
        var milestoneday ;
            for (var i=0; i<store.data.length; i++)
