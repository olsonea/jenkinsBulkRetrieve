                        <apex:commandButton value="{!$Label.bmcservicedesk__sscontactussubmit}" id="ssContactusSubmit" onclick="setFldVals(fieldValMap);return false;" disabled="{!IF($CurrentPage.parameters.ispreview == 'true' ,true,false)}"/>
											</div></td>
                                        </tr>
                                </table>   
                        </div>
                      
                </apex:outputPanel>
                </apex:outputPanel>
                <apex:outputPanel id="afterSubmitBtn">
               
                <apex:outputPanel rendered="{!isSubmit}" >
                        <div >
                        <br /><br />
                            
                            <center>
                                    <apex:outputText value="{!messages}" styleclass="title" id="msg" />
                            </center>
                        </div>
                        <div class = "verticalDistance5px"></div>
                        <div id="clsBtn">
                            <center>
                                    <input type = "button" onclick ="JavaScript:window.open('', '_self', '');window.close();" value="{!$Label.Close}"  />
                            </center>
                            <script>
                                function GetIEVersion() {
								  var sAgent = window.navigator.userAgent;
								  var Idx = sAgent.indexOf("MSIE");
								  if (Idx > 0) 
									return parseInt(sAgent.substring(Idx+ 5, sAgent.indexOf(".", Idx)));
								  else if (!!navigator.userAgent.match(/Trident\/7\./)) 
									return 11;
								  else
									return 0; //It is not IE
								}
								
                                if (GetIEVersion() > 0) 
                                    document.getElementById("clsBtn").style.display = "block";
                                else 
                                    document.getElementById("clsBtn").style.display = "none";
                                
                            </script>
                        </div>
                </apex:outputPanel> 
                </apex:outputPanel>         
    </apex:form>
    
     <script>
        function save(){
            SaveAction();
        }
        var url ='{!JSENCODE(companyURL)}';
        function openWindow(){
			if(url!='')
				window.open(url);
		}
       
		var queTableEle = document.getElementById("queTable");
		if(typeof(queTableEle)!='undefined' && queTableEle!=null){
			var maxwidth=screen.width-(screen.width/3);
        	maxwidth=maxwidth+'px';
	        queTableEle.style.maxWidth = maxwidth;
			var min_width=(screen.width/3)+'px';
			queTableEle.style.minWidth = min_width;
			var minPicklistValues = {!minValuesToDisplay};
			var max=100*minPicklistValues;
			var normalWidth = max - (2 * minPicklistValues / 100)*max;
			queTableEle.style.width = normalWidth + 'px';
		}
		

    </script>
    
