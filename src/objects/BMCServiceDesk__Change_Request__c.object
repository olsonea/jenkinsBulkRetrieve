<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <enableEnhancedLookup>false</enableEnhancedLookup>
    <validationRules>
        <fullName>BMCServiceDesk__Cannot_Update_Closed_Change_Request</fullName>
        <active>true</active>
        <description>This Rule does not allow user to modify record, if it is closed.</description>
        <errorConditionFormula>AND( NOT( BMCServiceDesk__State__c ) , NOT(PRIORVALUE( BMCServiceDesk__State__c ) ), NOT( ISNEW() ),NOT( ISCHANGED( BMCServiceDesk__Total_Duration_minutes__c ) )  )</errorConditionFormula>
        <errorMessage>This change request is closed. Reopen the change request to modify it.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>BMCServiceDesk__Check_ReviewDate</fullName>
        <active>true</active>
        <description>This rule checks to make sure that Review Date comes always after Actual End Date.</description>
        <errorConditionFormula>AND(NOT(OR(ISNULL(BMCServiceDesk__Review_Date__c),ISBLANK(BMCServiceDesk__Review_Date__c) ) ),OR( BMCServiceDesk__Review_Date__c &lt; BMCServiceDesk__Actual_End_Date__c,  BMCServiceDesk__Actual_End_Date__c = BMCServiceDesk__Review_Date__c) )</errorConditionFormula>
        <errorMessage>The Review Date must be later than the Actual End Date</errorMessage>
    </validationRules>
</CustomObject>
