<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <enableEnhancedLookup>true</enableEnhancedLookup>
    <validationRules>
        <fullName>BMCServiceDesk__Check_ExpirationDate</fullName>
        <active>true</active>
        <description>The expiration date and time should not be earlier than the current date and time or the post date and time.</description>
        <errorConditionFormula>AND(NOT(OR(ISNULL(BMCServiceDesk__expirationDate__c),ISBLANK(BMCServiceDesk__expirationDate__c) ) ) ,OR(BMCServiceDesk__expirationDate__c &lt;  NOW() ,BMCServiceDesk__expirationDate__c &lt; BMCServiceDesk__postDate__c))</errorConditionFormula>
        <errorMessage>The expiration date and time should not be earlier than the current date and time or the post date and time.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>BMCServiceDesk__UniqueBroadcastIDCheck</fullName>
        <active>true</active>
        <errorConditionFormula>AND(OR(ISNEW( ), ISCHANGED( Name )),NOT( ISBLANK(VLOOKUP( $ObjectType.BMCServiceDesk__Broadcasts__c.Fields.Name,$ObjectType.BMCServiceDesk__Broadcasts__c.Fields.Name,NULLVALUE(Name, Name) ))))</errorConditionFormula>
        <errorMessage>A Broadcast record with this Broadcast ID already exists. Enter unique Broadcast ID.</errorMessage>
    </validationRules>
</CustomObject>
